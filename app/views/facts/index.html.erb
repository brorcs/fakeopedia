<p id="notice"><%= notice %></p>

<h1>trollpedia</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @facts.each do |fact| %>
      <div style="max-width: 300px">
        <td>hello!:):<%= fact.body %></td>
        <td><%= image_tag fact.image, style: "max-width: 500px; max-height: 500px"; %></td>
        <td><%= link_to 'look', fact %></td>
        <td><%= link_to 'edit', edit_fact_path(fact) %></td>
        <td><%= link_to 'burn', fact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

